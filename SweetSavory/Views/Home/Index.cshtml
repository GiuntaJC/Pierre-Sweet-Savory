<h1>Pierre's Sweet and Savory Treats</h1>
<hr>

<h2>Treats</h2>
@if(ViewBag.Treats.Count == 0)
{
  <h3>No treats to list</h3>
}
<ul>
  @foreach (var treat in ViewBag.Treats)
  {
    <li>@Html.ActionLink($"{treat.TreatName}", "Details", "Treats", new { id = treat.TreatId })</li>
  }
</ul>
<h2>Flavors</h2>
@if(ViewBag.Flavors.Count == 0)
{
  <h3>No flavors to list</h3>
}
<ul>
  @foreach (var flavor in ViewBag.Flavors)
  {
    <li>@Html.ActionLink($"{flavor.FlavorName}", "Details", "Flavors",  new { id = flavor.FlavorId })</li>
  }
</ul>
<br>
<hr>
<p>@Html.ActionLink("See all flavors", "Index", "Flavors")</p>
<p>@Html.ActionLink("See all treats", "Index", "Treats")</p>
<p>@Html.ActionLink("Create an Account, Login or Log Out", "Index", "Account")</p>