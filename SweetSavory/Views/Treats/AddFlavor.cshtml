@model SweetSavory.Models.Treat;

<h1>Add flavor to treat</h1>

<h3>Adding flavor to @Html.DisplayFor(model => model.TreatName)</h3>

@using(Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.Label("Select flavor")
  @Html.DropDownList("FlavorId")

  <input type="submit" value="save">
}

<p>@Html.ActionLink("Back to list of treats", "Index")</p>
<p>@Html.ActionLink("Back to home", "Index", "Home")</p>